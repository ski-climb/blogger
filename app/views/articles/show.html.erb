<h1><%= @article.title %></h1>
<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>
<p>Posted: <%= @article.created_at.strftime('%b %d, %Y') %></p><br />
<p><%= @article.body %></p>


<%= render partial: 'comments/form' %>

<%= link_to "Back to list of articles", articles_path %>

<%= link_to "Edit", edit_article_path(@article) %>
<%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"} %>

<h3>Comments (<%= @article.comments.count %>)</h3>
<%= render partial: 'articles/comment', collection: @article.comments.reverse %>
